package domain;

public class Professor extends Pessoa {
	private int matricula;

	public int getMatricula() {
		return matricula;
	}

	public Professor(String nome, String email, int matricula) {
		super(nome, email);
		this.matricula = matricula;
	}

	@Override
	public String entrarNaSala() {
		return super.entrarNaSala() + ", é o professor de hoje";
	}

	public String entrarNaSala(String tratamento) {
	  return String.format("Olá meu nome é %s %s e meu email é %s", tratamento, nome, email);
	}
	
	
	

}
